<Window
    x:Class="NHibernateQueryViewer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="clr-namespace:NHibernateQueryViewer"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    Title="MainWindow"
    Width="800"
    Height="450">
    <Window.DataContext>
        <app:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ListBox
            DisplayMemberPath="Parameterized"
            ItemsSource="{Binding Queries}"
            SelectedItem="{Binding SelectedQuery}" />

        <avalonEdit:TextEditor
            x:Name="textEditor"
            Grid.Column="1"
            FontFamily="Consolas"
            FontSize="12pt"
            IsReadOnly="True"
            ShowLineNumbers="True"
            SyntaxHighlighting="TSQL"
            WordWrap="True" />
    </Grid>
</Window>
