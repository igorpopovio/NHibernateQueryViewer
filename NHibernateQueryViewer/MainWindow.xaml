<Window
    x:Class="NHibernateQueryViewer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="clr-namespace:NHibernateQueryViewer"
    Title="MainWindow"
    Width="800"
    Height="450">
    <Window.DataContext>
        <app:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ListBox
            DisplayMemberPath="Parameterized"
            ItemsSource="{Binding Queries}"
            SelectedItem="{Binding SelectedQuery}" />
        <TextBox
            Grid.Column="1"
            IsReadOnly="True"
            Text="{Binding SelectedQuery.WithParameters}"
            TextWrapping="Wrap" />
    </Grid>
</Window>
