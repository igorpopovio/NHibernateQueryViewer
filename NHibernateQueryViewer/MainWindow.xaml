<Window
    x:Class="NHibernateQueryViewer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="clr-namespace:NHibernateQueryViewer"
    Title="MainWindow"
    Width="800"
    Height="450">
    <Window.DataContext>
        <app:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox
            AcceptsReturn="True"
            Text="{Binding Input, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />
        <TextBox
            Grid.Row="1"
            IsReadOnly="True"
            Text="{Binding Output}"
            TextWrapping="Wrap" />
    </Grid>
</Window>
